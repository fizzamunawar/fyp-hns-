@model IEnumerable<fyp_hunger_nd_spice_.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a class="btn btn-theme btn-lg" href="@Url.Action("Create","categories")">Add new item </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cusinie_name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cusinie_name)
        </td>
        <td>
            <a class="btn btn-primary fa fa-edit" href="@Url.Action("Edit", "Categories", new { id=item.Cat_ID })"></a>
            <a class="btn btn-success fa fa-book" href="@Url.Action("Details", "Categories", new { id=item.Cat_ID })"></a>
            <a class="btn btn-danger fa fa-trash" href=" @Url.Action("Delete", "Categories", new { id=item.Cat_ID }) "></a>
             
           
        </td>
    </tr>
}

</table>
