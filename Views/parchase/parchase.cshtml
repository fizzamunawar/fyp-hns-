@model fyp_hunger_nd_spice_.Models.Menu

@{ Layout= "~/Views/Shared/_layoutadmin.cshtml"; }
<div class="col-lg-9 main-chart">
    <div class="breadcrumb-wrap">
        <div class="container-fluid">
            <h2>Purchase</h2>
        </div>
        
    </div>
    </div>
    <!-- Breadcrumb End -->
    <!-- Product List Start -->
    <div class="product-view">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-9">
                    <div class="row">

                        @foreach (var p in Model.ingr)
                        {
                            <div class="col-md-4">
                           
                                <div class="product-item">
                                    <div class="product-title">
                                        <h3>@p.ingredient_name</h3>

                                    </div>
                                    <div class="product-image">
                                        <a href="product-detail.html">
                                            <img src="@Url.Content(p.ingredient_pic)" style="height:240px;width:240px;" alt="Product Image">
                                        </a>
                                        <div class="product-action">
                                            <a href="@Url.Action("Addtocart", "parchase", new { id=p.ingredient_id})"><h4>Add to stock</h4></a>

                                        </div>
                                    </div>
                                    <div class="product-price">
                                        <h3><span>Rs.</span>@p.ingredient_price</h3>

                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Pagination Start -->
                    <div class="col-md-12">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination justify-content-center">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" tabindex="-1">Previous</a>
                                </li>
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#">Next</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                    <!-- Pagination Start -->
                </div>

                <!-- Side Bar Start -->
                <div class="col-md-3 sidebar cat1">
                    <div class="sidebar-widget category">
                        <h2 class="title">Category</h2>
                        <nav class="navbar bg-light">
                            <div class="navbar-nav">
                                <div class="nav-item">
                                    @foreach (var c in Model.cate)
                                    {
                                        <a style="font-size:20px;" class="nav-link" href="@Url.Action("parchase", "parchase", new {id=c.Cate_ID})"><i class="fa fa-female"></i>@c.Cat_name <small class="text-muted">(@c.Ingredients.Count)</small></a>
                                        <br />
                                    }
                                </div>
                            </div>

                        </nav
                    </div>

                    <div class="sidebar-widget widget-slider">
                        <div class="sidebar-slider normal-slider">


                        </div>
                    </div>



                </div>
                <!-- Side Bar End -->
            </div>
        </div>
    </div>
