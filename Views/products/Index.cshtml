@model IEnumerable<fyp_hunger_nd_spice_.Models.product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a class="btn btn-theme btn-lg" href="@Url.Action("Create","products")">Add new item </a>
</p>
<table class="table table-bordered table-hover">
    <tr class=" table table-danger ">


        <th>
            Dishes
        </th>
        <th>
            Descriprion
        </th>
        <th>
            Cost
        </th>
        <th>
            Price
        </th>
        <th>
            Picture
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Products_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Products_description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cost)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Products_price)

            </td>
            <td>
                <img height="100px" width="100px" src="@Url.Content(item.Products_pic)" />
            </td>
            <td>
                <a class="btn btn-primary fa fa-edit" href="@Url.Action("Edit","products",new { id = item.Products_id })"></a>
                <a class="btn btn-success fa fa-book" href="@Url.Action("Details","products",new { id = item.Products_id })"></a>
                <a class="btn btn-danger fa fa-trash" href="@Url.Action("Delete","products",new { id = item.Products_id } )"></a>

            </td>
        </tr>
    }

</table>
