@model IEnumerable<fyp_hunger_nd_spice_.Models.Ingredient>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a class="btn btn-theme btn-lg" href="@Url.Action("Create","Ingredients")">Add new item </a>
</p>
<table class="table">
    <tr>
        <th>
            Product Name 
        </th>
        <th>
            Product Descriprion
        </th>
        <th>
            Product Price
        </th>
        <th>
            Product Picture
        </th>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>

    <td>
        @Html.DisplayFor(modelItem => item.ingredient_name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ingredient_description)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ingredient_price)
    </td>
    <td>
        <img height="100px" width="100px" src="@Url.Content(item.ingredient_pic)" />
    </td>
    <td>
        <a class="btn btn-primary fa fa-edit" href="@Url.Action("Edit","Ingredients",new { id = item.ingredient_id})"></a>
        <a class="btn btn-success fa fa-book" href="@Url.Action("Details","Ingredients",new { id = item.ingredient_id })"></a>
        <a class="btn btn-danger fa fa-trash" href="@Url.Action("Delete","Ingredients",new { id = item.ingredient_id } )"></a>

    </td>
</tr>
}

</table>
