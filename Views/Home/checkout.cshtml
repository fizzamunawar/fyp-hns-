



@{

    Layout= "~/Views/Shared/_layoutcustomer.cshtml";
}

<h1 class="display-3 text-center text-white mb-3 animated slideInDown">Checkout</h1>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb justify-content-center text-uppercase">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="#">Pages</a></li>
        <li class="breadcrumb-item text-white active" aria-current="page">Checkout</li>
    </ol>
</nav>
        </div>
    </div>
</div>
<!-- Cart Start -->
@using (Html.BeginForm("paynow", "Home"))
{
    <div class="checkout">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8">
                    <div class="checkout-inner">
                        <div class="billing-address">
                            <h2>Billing Address</h2>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Name</label>
                                    <input class="form-control" name="Order_Name" type="text" placeholder="Name" required>
                                </div>

                                <div class="col-md-6">
                                    <label>E-mail</label>
                                    <input class="form-control" name="Order_Email" type="text" placeholder="E-mail" required>
                                </div>
                                <div class="col-md-6">
                                    <label>Mobile No</label>
                                    <input class="form-control" name="Order_Contact" type="text" placeholder="Mobile No" required>
                                </div>
                                <div class="col-md-12">
                                    <label>Address</label>
                                    <input class="form-control" type="text" name="Order_Address" placeholder="Address" required>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="checkout-inner">
                        <div class="checkout-summary">
                            <h1>Cart Total</h1>

                            <p class="sub-total">Sub Total<span>@Session["totalbill"]</span></p>
                            <p class="ship-cost">Shipping Cost<span>0</span></p>
                            <h2>Grand Total<span>@Session["totalbill"]</span></h2>
                        </div>

                        <div class="checkout-payment">

                            <div class="checkout-btn">
                                <button> <a  style="color:white;">Placeorder</a></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script type="text/javascript">
    window.onload = function () { window.scrollBy(0, 400) }
</script>
