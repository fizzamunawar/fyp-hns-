@model IEnumerable<fyp_hunger_nd_spice_.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a class="btn btn-theme btn-lg" href="@Url.Action("Create","Employees")">Add new Emoloyee </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Employee_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee_Role)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee_Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee_email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee_contact)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee_address)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Employee_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee_Role)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee_Gender)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee_email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee_contact)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee_address)
        </td>
        <td>
            <a class="btn btn-primary fa fa-edit" href=" @Url.Action("Edit", "Employees", new { id = item.Employee_id }) "></a>
            <a class="btn btn-success fa fa-book" href=" @Url.Action("Details", "Employees", new { id = item.Employee_id })"></a>
            <a class="btn btn-danger fa fa-trash" href=" @Url.Action("Delete", "Employees", new { id = item.Employee_id })"></a>
        </td>
    </tr>
}

</table>
